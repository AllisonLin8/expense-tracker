<div class="d-flex justify-content-evenly align-items-center">
    <h3>請修改你的支出</h3>
</div>
{{>message}}
<div class="mb-2">*必填欄位</div>
<form action="/records/{{record._id}}/?_method=PUT" method="POST">
    <div class="mb-3">
        <label for="name" class="form-label">名稱*</label>
        {{!-- <input type="text" name="name" value="{{record.name}}" class="form-control" id="name"> --}}
        <input type="text" name="name" value="{{#if errors}}{{name}}{{else}}{{record.name}}{{/if}}" class="form-control"
            id="name">
    </div>
    <div class="mb-3">
        <label for="date" class="form-label">日期*</label>
        {{!-- <input type="date" name="date" value="{{record.date}}" class="form-control" id="date"> --}}
        <input type="date" name="date" value="{{#if errors}}{{date}}{{else}}{{record.date}}{{/if}}" class="form-control"
            id="date">
    </div>
    <div class="mb-3">
        <label for="categoryId" class="form-label">類別*</label>
        {{!-- <select id="categoryId" name="categoryId" value="{{record.categoryId}}" class="form-select"> --}}
            <select id="categoryId" name="categoryId"
                value="{{#if errors}}{{categoryId}}{{else}}{{record.categoryId}}{{/if}}" class="form-select">
                <option disabled hidden></option>
                {{#each categories}}
                <option {{#ifEquals this.name ../record.categoryId.name}}{{/ifEquals}}>
                    {{this.name}}
                </option>
                {{/each}}
            </select>
    </div>
    <div class="mb-3">
        <label for="amount" class="form-label">金額*</label>
        {{!-- <input type="number" name="amount" value="{{record.amount}}" class="form-control" id="amount"> --}}
        <input type="number" name="amount" value="{{#if errors}}{{amount}}{{else}}{{record.amount}}{{/if}}"
            class="form-control" id="amount">
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary btn-lg">修改支出</button>
    </div>
</form>